<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts_Agenda.Views.AddContactPage"
             Title="New Contact">
    <ScrollView>
        <StackLayout Margin="20">
            <Entry Text="{Binding Name}" Placeholder="Name"/>
            <Entry Text="{Binding PhoneNumber}" Placeholder="Phone Number" Keyboard="Numeric"/>
            <Button Text="Add" Style="{StaticResource buttonStyle}" Command="{Binding OnAddCommand}" VerticalOptions="End"/>
        </StackLayout>
    </ScrollView>
</ContentPage>